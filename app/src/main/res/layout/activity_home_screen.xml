                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jobs" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/learn" />
        </com.google.android.material.tabs.TabLayout>
